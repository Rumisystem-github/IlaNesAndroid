<resources xmlns:tools="http://schemas.android.com/tools">
	<!-- Base application theme. -->
	<style name="Theme.IlaNesAndroid" parent="Theme.MaterialComponents.DayNight.NoActionBar">
		<!-- 主な色 -->
		<item name="colorPrimary">@color/theme_color</item>
		<item name="colorPrimaryVariant">@color/theme_color</item>
		<item name="colorOnPrimary">@color/white</item>

		<!-- 副の色 -->
		<item name="colorSecondary">@color/theme_color_sec</item>
		<item name="colorSecondaryVariant">@color/theme_color_sec</item>
		<item name="colorOnSecondary">@color/black</item>

		<!-- 上のバーの色 -->
		<item name="android:statusBarColor">@color/theme_color</item>

		<!--作ったテーマをばーん-->
		<item name="materialButtonStyle">@style/Widget.Rumi.Button</item>
		<item name="android:textViewStyle">@style/Widget.Rumi.TextView</item>
		<item name="toolbarStyle">@style/Widget.Rumi.Toolbar</item>
	</style>

	<!--テキスト-->
	<style name="Widget.Rumi.TextView" parent="Widget.MaterialComponents.Button">
		<item name="android:textColor">@color/black</item>
		<item name="textAllCaps">false</item>
	</style>

	<!--ボタン-->
	<style name="Widget.Rumi.Button" parent="Widget.MaterialComponents.Button">
		<item name="backgroundTint">@color/theme_color_sec</item>
		<item name="android:textColor">@color/black</item>
		<item name="cornerRadius">0dp</item>
	</style>

	<!--ツールバー-->
	<style name="Widget.Rumi.Toolbar" parent="Widget.MaterialComponents.Toolbar">
		<item name="titleTextColor">@color/white</item>
		<item name="android:background">?attr/colorPrimary</item>
	</style>
</resources>